                        //eventOverlap: function(stillEvent, movingEvent) {
                        //    return stillEvent.allDay && movingEvent.allDay;
                        //},
                        //eventConstraint: {
                        //    startTime: "10:00",
                        //    endTime: "19:00",
                        //    daysOfWeek: [1, 2, 3]
                        //},
                        //eventAllow: function(dropEvent,draggedEvent) {
                        //    return false;
                        //}
                    });


                calendar.render();
                var events = calendar.getEvents();
                console.log(events);

                var id = "x";

                var event = calendar.getEventById(id);
                console.log(event);
            });
    </script>
}
