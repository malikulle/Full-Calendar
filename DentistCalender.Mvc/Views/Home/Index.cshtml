                        maxTime: "21:00:00",
                        //slotDuration: '00:15:00',
                        //slotLabelInterval: '00:15:00',
                        slotLabelFormat: {
                            hour: "2-digit",
                            minute: "2-digit"
                        },
                        fixedWeekCount: true,
                        showNonCurrentDates: false,
                        //handleWindowResize: true,
                        //windowResizeDelay: 1000,
                        //windowResize: function (view) {
                        //},
                        contentHeight: 650,
                        allDaySlot: false,
                        //firstDay : 0,
                        defaultView: 'dayGridMonth',
                        weekends: true,
                        titleFormat: {
                            year: "numeric",
                            month: "long",
                            day: "numeric"
                        },
                        titleRangeSeparator: " / ",
                        columnHeaderFormat: {
                            //month: "numeric",
                            weekday: "long",
                            //day : "numeric"
                        },
                        views: {
                            timeGridForFourDay: {
                                type: "timeGrid",
                                //dayCount: 4,
                                duration: { days: 4 },
                                buttonText: "4 Gün"
                            }
                        },
                        customButtons: {
                            addEvent: {
                                text: "Ekle",
                                click: function() {
                                    var newEvent = {
                                        id: "a",
                                        title: "New Event",
                                        start: "2020-11-28T15:00:00.000Z",
                                        end: "2020-11-28T18:30:00.000Z"
                                    }
                                    calendar.addEvent(newEvent);
                                }
                            }
                        },
                        //eventColor : "orange",
                        eventTimeFormat: {
                            hour: "2-digit",
                            minute: "2-digit",
                        },
                        timeZone: "UTC",
                        events: [
                            {
                                id: "x",
                                title: "Merhaba",
                                start: "2020-11-28T08:00:00.000Z",
                                end: "2020-11-28T10:30:00.000Z"
                            },
                            {
                                id: "y",
                                title: "Merhaba Y",
                                start: "2020-11-28T11:00:00.000Z",
                                end: "2020-11-28T12:30:00.000Z"
                            }
                        ],
                        eventRender: function(info) {

                        },
                        selectable: true,
                        droppable : true,
                        select: function(selectionInfo) {
                            console.log(selectionInfo);
                        },
                        eventClick: function(info) {
                            alert(info.event.title);
                        },
                        eventMousseEnter: function(onMouse) {
                            //alert(onMouse.event.start);

                        },
                        eventMouseLeave: function(onLeave) {
                            //alert(onLeave.event.id);

                        },
                        editable: true,
                        snapDuration: "00:15:00",
                        eventDragStart: function(info) {
                            console.log(info);
                        },
                        eventDragStop: function(info) {
                            console.log(info);
                        },
                        drop: function(event) {

